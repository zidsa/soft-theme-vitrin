{
  "icon": "fa fa-square",
  "name": {
    "ar": "اعلى الصفحة",
    "en": "Header"
  },
  "groups": [
    {
      "id": "header",
      "icon": "font_awesome",
      "name": {
        "ar": "رأس الصفحة",
        "en": "Header"
      },
      "settings": [
        {
          "id": "logo",
          "type": "image",
          "label": {
            "ar": "الشعار",
            "en": "Logo"
          },
          "info": {
            "ar": "ارفع صورة بحجم 750 * 750 ",
            "en": "This is an info text sample here"
          }
        },
        {
          "id": "options",
          "type": "checkbox",
          "label": {
            "ar": "الخيارات",
            "en": "Options"
          },
          "options": [
            {
              "label": {
                "ar": "إخفاء شريط البحث",
                "en": "Hide search bar"
              },
              "value": "hide_search_bar"
            },
            {
              "label": {
                "ar": "إخفاء اللغة",
                "en": "Hide language"
              },
              "value": "hide_language"
            },
            {
              "label": {
                "ar": "إخفاء اسم الدولة",
                "en": "Hide country"
              },
              "value": "hide_country"
            }
          ]
        },
        {
          "id": "logo_mobile",
          "type": "image",
          "label": {
            "ar": " الشعار للجوال (اختياري)",
            "en": "Logo mobile (optional)"
          },
          "info": {
            "ar": "ارفع صورة بحجم 322 * 750 ",
            "en": "This is an info text sample here"
          }
        },
        {
          "id": "search_placeholder",
          "type": "text",
          "label": {
            "ar": "تلميح شريط البحث",
            "en": "Search placeholder"
          }
        },
        {
          "id": "sticky",
          "type": "checkbox",
          "label": {
            "ar": "رأس ثابت مع التمرير",
            "en": "Sticky header"
          },
          "default": true
        }
      ]
    },
    {
      "id": "announcement_bar",
      "icon": "font_awesome",
      "name": {
        "ar": "شريط التنبيهات",
        "en": "Announcement bar"
      },
      "settings": [
        {
          "id": "url",
          "type": "url",
          "label": {
            "ar": "الرابط",
            "en": "Link"
          },
          "info": {
            "ar": "في حال كان الحقل فارغا لن يتم الانتقال للرابط عند الضغط",
            "en": "This is an info text sample here"
          }
        },
        {
          "id": "text",
          "type": "text",
          "label": {
            "ar": "النص",
            "en": "Text"
          }
        },
        {
          "id": "display",
          "type": "checkbox",
          "label": {
            "ar": "إظهار",
            "en": "Display menu"
          }
        },
        {
          "id": "text_color",
          "type": "color",
          "label": {
            "ar": "لون النص",
            "en": "Text color"
          }
        },
        {
          "id": "page_display",
          "type": "select",
          "label": {
            "ar": "عرض شريط التنبيهات في",
            "en": "Display announcement bar in"
          },
          "default": "all",
          "options": [
            {
              "label": {
                "ar": "جميع الصفحات",
                "en": "all pages"
              },
              "value": "all"
            },
            {
              "label": {
                "ar": "الصفحة الرئيسية ففط",
                "en": "home page only"
              },
              "value": "home"
            }
          ]
        },
        {
          "id": "background_color",
          "type": "color",
          "label": {
            "ar": "لون الخلفية",
            "en": "Text color"
          }
        },
        {
          "id": "enable_animation",
          "type": "checkbox",
          "label": {
            "ar": "تمكين التحريك",
            "en": "Enable animation"
          },
          "default": false
        },
        {
          "id": "animation_speed",
          "type": "number",
          "label": {
            "ar": "سرعة التحريك",
            "en": "Animation speed"
          },
          "default": 50
        },
        {
          "id": "pause_on_hover",
          "type": "checkbox",
          "label": {
            "ar": "ايقاف التحريك عند النقر",
            "en": "Pause on hover"
          },
          "default": false
        }
      ]
    }
  ]
}