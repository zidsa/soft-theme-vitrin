{% if store.settings.general.availability.closed_now %}
<div class="availability-bar" style="z-index: 4; {% if store.announcement_bar.background_color %}background: {{ store.announcement_bar.background_color }} {% endif %}">
    <div class="container d-flex justify-content-center position-relative">
        <div class="announcement-text mb-0 text-center" data-nosnippet>
            <span class="icon-locked_orders" style="font-size: 24px; position: relative; top: 2px;"></span>&nbsp;{{ store.settings.general.availability.message }}
        </div>
        <span class="icon-times-circle2 ab-close" onclick="hideAvailabilityBar()"></span>
    </div>
</div>
{% endif %}
